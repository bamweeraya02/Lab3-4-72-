CREATE VIEW EMP_DETAILS AS
SELECT 
    e.EMPLOYEE_ID, 
    e.FIRST_NAME || ' ' || e.LAST_NAME AS NAME,
    j.job_title,
    e.MANAGER_ID,
    d.DEPARTMENT_NAME,
    l.STREET_ADDRESS
FROM 
    EMPLOYEES e
JOIN 
    JOBS j ON e.JOB_ID = j.JOB_ID
JOIN 
    DEPARTMENTS d ON e.DEPARTMENT_ID = d.DEPARTMENT_ID
JOIN 
    LOCATIONS l ON d.LOCATION_ID = l.LOCATION_ID;
